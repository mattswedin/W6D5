    <thead>
        <tr>
            <th colspan="2"><%= @cat.name %></th>
        </tr>
    </thead>

    <tbody>
        <tr>
            <th scope: "row">birth date</th>
            <td> <%= @cat.birth_date %> </td>
        </tr>

